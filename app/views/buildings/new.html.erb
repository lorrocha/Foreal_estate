<%= simple_form_for @building do |f| %>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :state, collection:Building.valid_states%>
  <%= f.input :postal_code%>
  <%= f.input :owner_id, collection: @owners, label_method: :fullname, value_method: :id %>
  <%= f.input :description%>
  <%= f.button :submit%>
<% end %>
